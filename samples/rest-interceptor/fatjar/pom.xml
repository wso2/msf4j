<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>msf4j-service</artifactId>
        <groupId>org.wso2.msf4j</groupId>
        <version>2.1.1-SNAPSHOT</version>
        <relativePath>../../../poms/msf4j-service/pom.xml</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.wso2.msf4j.restinterceptorfatjar</groupId>
    <artifactId>rest-interceptor-fatjar</artifactId>
    <packaging>jar</packaging>
    <name>Sample: Rest Interceptor Fat Jar</name>
    <dependencies>
        <dependency>
            <groupId>org.wso2.msf4j.restinterceptorcommon</groupId>
            <artifactId>rest-interceptor-common</artifactId>
            <version>${restinterceptorcommonversion}</version>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.skife.maven</groupId>
                <artifactId>really-executable-jar-maven-plugin</artifactId>
                <configuration>
                    <programFile>restinterceptor</programFile>
                </configuration>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>really-executable-jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>
    <properties>
        <restinterceptorcommonversion>${project.version}</restinterceptorcommonversion>
        <microservice.mainClass>org.wso2.msf4j.restinterceptorfatjar.Application</microservice.mainClass>
    </properties>
</project>